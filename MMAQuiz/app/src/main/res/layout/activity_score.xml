<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/imagenjuego" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textoPuntuaciones"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="Puntuaciones"
            android:textSize="22dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:background="@drawable/score_border" >

        <TextView
            android:id="@+id/nombres_cab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:textColor="#000000"
            android:text="Nombre"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/puntuaciones_cab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            android:text="PuntuaciÃ³n"
            android:textSize="18dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/separador"
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:background="#ababab"
            android:layout_below="@id/puntuaciones_cab"/>

        <ListView
        android:id="@+id/puntuaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_below="@id/separador"/>

    </RelativeLayout>

</LinearLayout>
