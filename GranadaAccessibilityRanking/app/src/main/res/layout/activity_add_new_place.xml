<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="atlc.granadaaccessibilityranking.AddNewPlace">

    <EditText
        android:id="@+id/place_name"
        android:layout_width="301dp"
        android:layout_height="56dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nombre del lugar"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="-2dp"
        android:layout_marginTop="102dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/boton_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        tools:layout_editor_absoluteX="259dp"
        tools:layout_editor_absoluteY="244dp"
        android:layout_alignBaseline="@+id/boton_cancelar"
        android:layout_alignBottom="@+id/boton_cancelar"
        android:layout_alignEnd="@+id/place_name" />

    <Button
        android:id="@+id/boton_cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="244dp"
        android:layout_marginTop="104dp"
        android:layout_below="@+id/place_name"
        android:layout_alignStart="@+id/place_name" />

    <NumberPicker
        android:id="@+id/categories_picker"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/place_name" />

</RelativeLayout>
